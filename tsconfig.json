{
  "compilerOptions": {            
    "target": "ES6",                                
    "module": "commonjs",
    "allowjs": true,                      
    "lib": [
      "ESNext"
    ],                                   
    "outDir": "./dist",                    
    "strict": true,                                
    "esModuleInterop": true,                        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true        
  },
  "include": [
    "src/**/*"
  ]
}
